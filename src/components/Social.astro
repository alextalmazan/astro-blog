---
const { platform, userName } = Astro.props;
---

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>
<a
  href={platform === "linkedin"
    ? `https://www.${platform}.com/in/${userName}`
    : `https://www.${platform}.com/${userName}`}
  target="_blank">{platform}</a
>
